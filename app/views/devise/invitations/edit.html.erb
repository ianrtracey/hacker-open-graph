
<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  


  

<div class="container-fluid">
      <!-- START widget-->
      <div class="panel widget" >
         <div class="row row-table row-flush">
            <div class="col-xs-4 bb">
               <div class="row row-table row-flush">
                  <div class="col-xs-4 text-center text-info">
                     <em class="fa fa-users fa-2x"></em>
                  </div>
                  <div class="col-xs-4">
                     <div class="panel-body text-center">
                        <h4 class="mt0"><%= Hacker.all.count %></h4>
                        <p class="mb0 text-muted">HACKERS</p>
                     </div>
                  </div>
               </div>
            </div>
            <div class="col-xs-4 bb">
               <div class="row row-table row-flush">
                  <div class="col-xs-4 text-center text-danger">
                     <em class="fa fa-graduation-cap fa-2x"></em>
                  </div>
                  <div class="col-xs-4">
                     <div class="panel-body text-center">
                        <h4 class="mt0"><%= Hacker.where(:hireable => true).count %></h4>
                        <p class="mb0 text-muted">JOB SEEKERS</p>
                     </div>
                  </div>
               </div>
            </div>
            <div class="col-xs-4 bb">
               <div class="row row-table row-flush">
                  <div class="col-xs-4 text-center text-inverse">
                     <em class="fa fa-file-text-o fa-2x"></em>
                  </div>
                  <div class="col-xs-4">
                     <div class="panel-body text-center">
                        <h4 class="mt0"><%= Hacker.where.not(:resume => nil).count %></h4>
                        <p class="mb0 text-muted">RESUMES</p>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         </div>

</div>

<div class="block-center mt-xl wd-xl">
   <!-- START panel-->
   <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
         Cactus
      </div>
      <div class="panel-body">
         <p class="text-center pv">SET YOUR PASSWORD.</p>
         <form role="form" data-parsley-validate="" novalidate="" class="mb-lg">
            <div class="form-group has-feedback">
  			<%= f.password_field :password, :class =>'form-control', :placeholder => 'password' %></p>
            </div>

            <div class="form-group has-feedback">
            <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'password again' %></p>


            </div>
            <div class="clearfix">

               <div class="pull-right">
               <p><%= f.submit t("devise.invitations.edit.submit_button"), :class=>"btn btn-block btn-primary mt-lg" %></p>
               </div>
            </div>


         </form>
      </div>
   </div>
   <!-- END panel-->
</div>
<% end %>
