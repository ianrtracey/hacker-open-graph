   <small>Welcome to Hack Arizona!</small>
</div>
<div class="row">


   
   <div class="col-xs-4">
               <!-- START panel tab-->
            <div role="tabpanel" class="panel">
               <!-- Nav tabs-->
               <ul role="tablist" class="nav nav-tabs nav-justified">
                  <li role="presentation" class="active">
                     <a href="#home" aria-controls="home" role="tab" data-toggle="tab">
                        <em class="fa fa-clock-o fa-fw"></em>Most Popular Schools</a>
                  </li>

               </ul>
               <!-- Tab panes-->
               <div class="tab-content p0">
                  <div id="home" role="tabpanel" class="tab-pane active">
                     <!-- START list group-->
                     <div class="list-group mb0">
                     <% i = 0 %>
                     <% @schools[1].each do |school| %>
                        <a href="#" class="list-group-item">
                           
                           <strong><%= "#{i+=1}. "%></strong><%= school[0] %></a>
                     <% end %>

                     </div>
                     <!-- END list group-->
                     <div class="panel-footer text-right"><a href="#" class="btn btn-default btn-sm">View All Schools</a>
                     </div>
                  </div>
                  <div id="profile" role="tabpanel" class="tab-pane">
                     <!-- START table responsive-->

                     <!-- END table responsive-->
                     <div class="panel-footer text-right"><a href="#" class="btn btn-default btn-sm">View All Transactions</a>
                     </div>
                  </div>
               </div>
            </div>
   </div>
   <div class="col-xs-8">
         <h4>Languages</h4>
         <%= @schools %>
   </div>
      
</div>
<div class="container-fluid">
<!-- START DATATABLE 2 -->
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               Hack Arizona Registrants
            </div>
            <div class="panel-body">
               <table id="datatable2" class="table table-striped table-hover">
                  <thead>
                     <tr>
                        <th>Name</th>
                        <th>School</th>
                        <th>Major</th>
                        <th>Class</th>
                        <th>Hireable</th>

                     </tr>
                  </thead>
                  <tbody>
                     <% @hackers.each do |hacker| %>
                     <tr>
                        <td><%= link_to "#{hacker.first_name} #{hacker.last_name}", hacker%></td>
                        <td><%= hacker.school %></td>
                        <td><%= hacker.major %></td>
                        <td><%= hacker.graduation_date %></td>
                        <td><%= render_hireable_pretty(hacker.hireable).html_safe %></td>
                     </tr>
                     <% end %>
                  </tbody>
                  <tfoot>
                     <tr>
                        <th>
                           <input type="text" name="filter_name" placeholder="Filter Name" class="form-control input-sm datatable_input_col_search" />
                        </th>
                        <th>
                           <input type="text" name="filter_school" placeholder="Filter School" class="form-control input-sm datatable_input_col_search" />
                        </th>
                        <th>
                           <input type="text" name="filter_major" placeholder="Filter Major" class="form-control input-sm datatable_input_col_search" />
                        </th>
                        <th>
                           <input type="text" name="filter_class" placeholder="Filter Class" class="form-control input-sm datatable_input_col_search" />
                        </th>
                        <th>
                           <input type="text" name="filter_hireable" placeholder="Filter Hireable" class="form-control input-sm datatable_input_col_search" />
                        </th>
                     </tr>
                  </tfoot>
               </table>
            </div>
         </div>
      </div>
   </div>
   <!-- END DATATABLE 2 -->
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>